[user]
	name = Martin Stadler
	email = martin@sansnom.co.uk

[core]
	editor = vi
	autocrlf = input
	excludesfile = /home/martin/.gitignore_global
	filemode = false

[init]
	defaultBranch = main

[color]
	ui = auto

[credential]
	# Let GitHub CLI handle HTTPS credentials (works well without GCM)
	helper = "!gh auth git-credential"

[pull]
	rebase = true

[rebase]
	autosquash = true

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[merge]
	ff = only

[rerere]
	enabled = true

[tag]
	sort = version:refname

[alias]
	st = status -sb
	co = checkout
	cob = checkout -b
	br = branch -vv
	ci = commit -v
	ca = commit -v -a
	cm = commit -m
	amend = commit --amend --no-edit
	rb = rebase -i --rebase-merges
	lg = log --oneline --graph --decorate --all
	last = log -1 HEAD
	df = diff --word-diff
	ours = "!f(){ git checkout --ours -- \"$@\" && git add \"$@\"; }; f"
	theirs = "!f(){ git checkout --theirs -- \"$@\" && git add \"$@\"; }; f"

